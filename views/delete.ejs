<%- include ("./partials/_header") %>


<main role="main" class="container">
    <h1> Are you sure you want to delete this post?  </h1>
    <div class="row">
      <div class="col-md-8 blog-main">
        
        <form action="/delete/<%= ubp._id %>" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= ubp.title %>" disabled>
          </div>
          <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Author" value="<%= ubp.title %>" disabled>
          </div>
          <div class="form-group">
            <textarea class="form-control" name="post_data" cols="100" rows="10"
              placeholder="Add a Description" disabled> <%= ubp.post_data %>
            </textarea>
          </div>
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </div>
    </div>
  </main>


<%- include ("./partials/_footer") %>